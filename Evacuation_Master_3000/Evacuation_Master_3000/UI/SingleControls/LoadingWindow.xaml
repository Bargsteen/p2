<Window x:Class="Evacuation_Master_3000.UI.SingleControls.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:Evacuation_Master_3000.UI.SingleControls"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="LoadingWindow" Height="25" Width="200">
    <DockPanel Width="200" >

        <TextBlock x:Name="LoadingHeaderText" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="Loading..." VerticalAlignment="Top" Width="175" Height="25"/>
        <Image gif:ImageBehavior.AnimatedSource="loading.gif" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" Width ="25"
                    Visibility="Visible"
                    gif:ImageBehavior.RepeatBehavior="Forever"
                     Name ="LoadingGif"
                     gif:ImageBehavior.AutoStart="False"
       />
    </DockPanel>

</Window>