<UserControl x:Class="Evacuation_Master_3000.SimulationControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Evacuation_Master_3000"
             mc:Ignorable="d" >
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="0,5,30,5"/>
            </Style>
        </StackPanel.Resources>
        <GroupItem Name ="PreSimulationControls" Visibility="Visible">
            <StackPanel>
                <Button Name="StartSimulationButton" Content="Start simulation"/>
            </StackPanel>
        </GroupItem>
        <GroupItem Name="PostSimulationControls" Visibility="Collapsed">
            <StackPanel>
                <DockPanel>
                    <Button Name="AbortSimulationButton" Content="    Abort    "/>
                    <Button Name="PauseSimulationButton" Content="Pause"/>
                </DockPanel>
                <GroupItem Name="StepByStepControls" Visibility="Collapsed">
                    <Button Name="NextStepButton" Content="Next step"/>
                </GroupItem>
            </StackPanel>
        </GroupItem>
    </StackPanel>
</UserControl>
