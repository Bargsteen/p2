<UserControl x:Class="Evacuation_Master_3000.SwitchBetweenFloorsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Evacuation_Master_3000"
             mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center">
        <Button BorderThickness="0" Background="Transparent" Name="ArrowUp">
            <Image Source="/UI/Visual/floor_switcher_arrow.png" Width="20" Height="10"/>
        </Button>
        
        <StackPanel Name="FloorBarContainer"></StackPanel>
        <Button BorderThickness="0" Background="Transparent" Name="ArrowDown">
            <Image Source="/UI/Visual/floor_switcher_arrow_down.png" Width="20" Height="10"/>
        </Button>
    </StackPanel>
</UserControl>
